#!/usr/bin/env python

from flask import request, send_from_directory
from ztp_flask import app, manager
import ztp_celery


@app.route('/api/downloads/<filename>', methods=['GET'])
def static_file(filename):
    return send_from_directory('downloads', filename)


@app.route('/api/config0/nxos')
def nxos_bootconf():
    return send_from_directory('static', 'nxos-config0.conf')


@app.route('/api/register/<os_name>', methods=['GET', 'POST'])
def nxos_register(os_name):
    from_ipaddr = request.args.get('ipaddr') or request.remote_addr
    ztp_celery.ztp_bootstrapper.delay(os_name=os_name, ip_addr=from_ipaddr)
    return ""


if '__main__' == __name__:
    manager.run()
