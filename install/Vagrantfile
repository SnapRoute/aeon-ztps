Vagrant.configure(2) do |config|
  config.vm.box = "ubuntu/xenial64"
  config.vm.hostname = 'aeon-ztps'

  config.vm.provider "virtualbox" do |vb|
    vb.name = 'aeon-ztps'
    vb.memory = '1024'
  end

  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "via-ansible.yml"
    ansible.extra_vars = {
        vagrant: "True"
    }
  end

end
